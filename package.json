{
	"name": "blox-site",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"preview": "npm-run-all --parallel sync wpstart tailwindwatch",
		"sync": "browser-sync start -p 'localhost:8888/site' --files '**/*.php' 'build/*.js' 'build/*.css'",
		"test": "echo \"Error: no test specified\" && exit 1",
		"buildwp": "wp-scripts build",
		"wpstart": "wp-scripts start",
		"tailwindbuild": "tailwindcss -i ./src/index.scss -o ./build/block.css --postcss --minify",
		"tailwindwatch": "tailwindcss -i ./src/index.scss -o ./build/block.css --watch --postcss",
		"build": "npm-run-all --sequential buildwp tailwindbuild",
		"start": "npm-run-all --parallel wpstart tailwindwatch",
		"plugin-zip": "wp-scripts plugin-zip",
		"prod-zip": "npm-run-all --sequential build plugin-zip"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@wordpress/scripts": "^26.18.0",
		"autoprefixer": "^10.4.7",
		"browser-sync": "^2.27.10",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"postcss-nested": "^5.0.6",
		"postcss-scss": "^4.0.9",
		"tailwindcss": "^3.3.3"
	},
	"dependencies": {
		"@wordpress/blob": "^3.47.0",
		"@wordpress/block-editor": "^12.15.0",
		"@wordpress/components": "^25.13.0",
		"@wordpress/element": "^5.24.0",
		"@wordpress/icons": "^9.38.0"
	}
}
